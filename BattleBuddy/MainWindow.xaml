<maControls:MetroWindow x:Class="BattleBuddy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:maControls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:viewModel="clr-namespace:BattleBuddy.ViewModels"
        xmlns:converters="clr-namespace:BattleBuddy.Converters"
        xmlns:helpers="clr-namespace:BattleBuddy.Helpers"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:BattleBuddy"
        mc:Ignorable="d"
        Title="Battle Buddy" Height="700" Width="1300"
                        MinHeight="80"
                        MinWidth="620"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        ShowTitleBar="False" 
        ShowCloseButton="False" 
        ShowMaxRestoreButton="False" 
        ShowMinButton="False">
    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <converters:MultiCommandParamConverter x:Key="MultiCommandParamConverterKey"/>
        <converters:ImageConverter x:Key="ImageConverterKey"/>
        <converters:ColorToSolidColorBrushValueConverter x:Key="ColorConverterKey"/>
        <converters:ListViewVariableWidthConverter x:Key="ListViewVariableWidthConverterKey"/>
        
    </Window.Resources>

    <Border x:Name="AppBorder"
            CornerRadius="10" >
        <Border.Background>
            <ImageBrush ImageSource="{Binding SelectedImagePath, Converter={StaticResource ImageConverterKey}}"/>
        </Border.Background>

        <Border BorderThickness="1"
                CornerRadius="10"
                Opacity="{Binding OpacitySetting}">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" 
                                     EndPoint="1,1">
                    <GradientStop Color="{Binding BorderColor_Darker}" 
                                  Offset="0"/>
                    <GradientStop Color="{Binding BorderColor}" 
                                  Offset="0.5"/>
                    <GradientStop Color="{Binding BorderColor_Lighter}" 
                                  Offset="1"/>
                    <!--GradientStop Color="{StaticResource winBorderColor1}" 
                                  Offset="0"/>
                    <GradientStop Color="{StaticResource winBorderColor2}" 
                                  Offset="0.5"/>
                    <GradientStop Color="{StaticResource winBorderColor3}" 
                                  Offset="1"/-->
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Grid>
                <Grid.ColumnDefinitions>
                    <!-- Navigation Menu -->
                    <ColumnDefinition Width="250"/>
                    <!-- Content Section -->
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Navigation Menu -->
                <Border x:Name="NavigationMenuBorder"
                        CornerRadius="10,0,0,10"
                        Grid.Column="0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" 
                                             EndPoint="1,0.7">
                            <GradientStop Color="{Binding BackgroundColor_Darker1}" 
                                          Offset="0"/>
                            <GradientStop Color="{Binding BackgroundColor}" 
                                          Offset="1"/>
                            <!--GradientStop Color="{StaticResource secondaryBackColor1}" 
                                          Offset="0"/>
                            <GradientStop Color="{StaticResource secondaryBackColor2}" 
                                          Offset="1"/-->
                        </LinearGradientBrush>
                    </Border.Background>

                    <StackPanel>
                        <!-- Logo -->
                        <StackPanel Orientation="Horizontal"
                                    Height="35"
                                    Margin="15,25,0,40">
                            <Image Source="/Images/d20-icon-5.png" 
                                   Height="30"/>
                            <TextBlock Text="Battle Buddy"
                                       Foreground="{Binding TitleColor, Converter={StaticResource ColorConverterKey}}"
                                       FontSize="20"
                                       FontFamily="Monteserrat"
                                       FontWeight="Medium"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"/>
                            <!--Foreground="{StaticResource titleColor2}"-->
                        </StackPanel>

                        <!-- Menu Buttons -->
                        <RadioButton x:Name="PartyRadioBtn"
                                     Tag="{Binding IconColor, Converter={StaticResource ColorConverterKey}}"
                                     Command="{Binding ChangeChildViewCommand}"
                                     CommandParameter="0"
                                     GroupName="MenuItems">
                            <RadioButton.Style>
                                <Style TargetType="RadioButton" BasedOn="{StaticResource menuButton}">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Margin" Value="0,0,0,5"/>
                                            <Setter Property="Background" Value="{Binding BackgroundColor_Lighter1, 
                                                                        Converter={StaticResource ColorConverterKey}}"/>
                                        </Trigger>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter Property="Margin" Value="0,0,0,5"/>
                                            <Setter Property="Background" Value="{Binding BackgroundColor_Lighter3, 
                                                                        Converter={StaticResource ColorConverterKey}}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </RadioButton.Style>
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Users" 
                                              Style="{StaticResource menuButtonIcon}"
                                              Foreground="{Binding IconColor, Converter={StaticResource ColorConverterKey}}"/>
                                <TextBlock Text="{Binding PartyName}" 
                                           Style="{StaticResource menuButtonText}"
                                           Foreground="{Binding TextColor, Converter={StaticResource ColorConverterKey}}"/>
                            </StackPanel>
                        </RadioButton>

                        <!--Select Character Buttons-->
                        <ListView x:Name="lvCharacterSelection"
                                  Height="auto"
                                  ItemsSource="{Binding Characters, UpdateSourceTrigger=PropertyChanged}" 
                                  Background="Transparent"
                                  BorderThickness="0"
                                  SelectionMode="Single"
                                  SelectedItem="{Binding Path=SelectedCharacter}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <RadioButton Tag="{Binding Path=DataContext.IconColor, 
                                                                Converter={StaticResource ColorConverterKey}, 
                                                                Source={x:Reference Name=lvCharacterSelection}}"
                                                 GroupName="MenuItems"
                                                 Command="{Binding Path=DataContext.ChangeChildViewCommand, 
                                                               Source={x:Reference Name=lvCharacterSelection}}">
                                        <RadioButton.Style>
                                            <Style TargetType="RadioButton" BasedOn="{StaticResource menuButton}">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Margin" Value="0,0,0,5"/>
                                                        <Setter Property="Background" Value="{Binding Path=DataContext.BackgroundColor_Lighter1, 
                                                                        Converter={StaticResource ColorConverterKey}, 
                                                                        Source={x:Reference Name=lvCharacterSelection}}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter Property="Margin" Value="0,0,0,5"/>
                                                        <Setter Property="Background" Value="{Binding Path=DataContext.BackgroundColor_Lighter3, 
                                                                        Converter={StaticResource ColorConverterKey}, 
                                                                        Source={x:Reference Name=lvCharacterSelection}}"/>
                                                        <Setter Property="Foreground" Value="{Binding TextColor}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </RadioButton.Style>
                                        <RadioButton.Resources>
                                            <sys:Int32 x:Key="fixedCharacterDetailTabIndex"> 1 </sys:Int32>
                                        </RadioButton.Resources>
                                        <RadioButton.CommandParameter>
                                            <MultiBinding Converter="{StaticResource MultiCommandParamConverterKey}">
                                                <Binding Source="{StaticResource fixedCharacterDetailTabIndex}"/>
                                                <Binding Path="Name"/>
                                            </MultiBinding>
                                        </RadioButton.CommandParameter>
                                        <StackPanel Orientation="Horizontal">
                                            <fa:IconImage Icon="User" 
                                                          Style="{StaticResource menuButtonIcon}"
                                                          Foreground="{Binding Path=DataContext.IconColor, 
                                                                        Converter={StaticResource ColorConverterKey}, 
                                                                        Source={x:Reference Name=lvCharacterSelection}}"/>
                                            <TextBlock x:Name="CharacterDetailName"
                                                       Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                                                       Style="{StaticResource menuButtonText}"
                                                       Foreground="{Binding Path=DataContext.TextColor, 
                                                                        Converter={StaticResource ColorConverterKey}, 
                                                                        Source={x:Reference Name=lvCharacterSelection}}"/>
                                        </StackPanel>
                                    </RadioButton>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="{x:Type ListViewItem}">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ListViewItem}">
                                                <ContentPresenter />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>

                        <!--Add Character Button-->
                        <RadioButton Tag="{Binding IconColor, Converter={StaticResource ColorConverterKey}}"
                                     GroupName="MenuItems"
                                     Command="{Binding ChangeChildViewCommand}"
                                     CommandParameter="3">
                            <RadioButton.Style>
                                <Style TargetType="RadioButton" BasedOn="{StaticResource menuButton}">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Margin" Value="0,0,0,5"/>
                                            <Setter Property="Background" Value="{Binding BackgroundColor_Lighter1, 
                                                                        Converter={StaticResource ColorConverterKey}}"/>
                                        </Trigger>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter Property="Margin" Value="0,0,0,5"/>
                                            <Setter Property="Background" Value="{Binding BackgroundColor_Lighter3, 
                                                                        Converter={StaticResource ColorConverterKey}}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </RadioButton.Style>
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="UserPlus" 
                                              Style="{StaticResource menuButtonIcon}"
                                              Foreground="{Binding IconColor, Converter={StaticResource ColorConverterKey}}"/>
                                <TextBlock Text="Add Character" 
                                           Style="{StaticResource menuButtonText}"
                                           Foreground="{Binding TextColor, Converter={StaticResource ColorConverterKey}}"/>
                            </StackPanel>
                        </RadioButton>

                    </StackPanel>
                </Border>

                <!-- Main Section -->
                <Border CornerRadius="0,10,10,0"
                        Grid.Column="1">
                    <!--{Binding TestColor, Converter={StaticResource ColorConverterKey}}-->
                    <Border.Background>
                        <LinearGradientBrush StartPoint="1,1" 
                                             EndPoint="0,0">
                            <GradientStop Color="{Binding BackgroundColor_Darker3}"
                                          Offset="0"/>
                            <GradientStop Color="{Binding BackgroundColor_Darker2}"
                                          Offset="1"/>
                            <!--GradientStop Color="{StaticResource primaryBackColor1}" 
                                          Offset="0"/>
                            <GradientStop Color="{StaticResource primaryBackColor2}" 
                                          Offset="1"/-->
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid>
                        <Grid.RowDefinitions>
                            <!-- Control Bar -->
                            <RowDefinition Height="25"/>
                            <!-- Header / Caption -->
                            <RowDefinition Height="35"/>
                            <!-- Content Section -->
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Control Bar -->
                        <StackPanel x:Name="pnlControlBar"
                                    Grid.Row="0"
                                    Orientation="Horizontal"
                                    FlowDirection="RightToLeft"
                                    Background="Transparent"
                                    Margin="0,0,10,0"
                                    MouseLeftButtonDown="pnlControlBar_MouseLeftButtonDown"
                                    MouseEnter="pnlControlBar_MouseEnter" >

                            <Button x:Name="btnClose"
                                    Tag="{StaticResource color4}"
                                    Click="btnClose_Click">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource controlButton}">
                                        <Style.Triggers>
                                            <!--Button Style on hover-->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{Binding BackgroundColor_Lighter2, Converter={StaticResource ColorConverterKey}}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <fa:IconImage Icon="Xmark" 
                                              Style="{StaticResource controlButtonIcon}"
                                              Foreground="{Binding IconColor, Converter={StaticResource ColorConverterKey}}"/>
                            </Button>

                            <Button x:Name="btnMaximize"
                                    Tag="{StaticResource color4}"
                                    Click="btnMaximize_Click">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource controlButton}">
                                        <Style.Triggers>
                                            <!--Button Style on hover-->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{Binding BackgroundColor_Lighter2, Converter={StaticResource ColorConverterKey}}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <fa:IconImage Icon="Square" 
                                              Style="{StaticResource controlButtonIcon}"
                                              Foreground="{Binding IconColor, Converter={StaticResource ColorConverterKey}}"/>
                            </Button>

                            <Button x:Name="btnMinimize"
                                    Tag="{StaticResource color4}"
                                    Click="btnMinimize_Click">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource controlButton}">
                                        <Style.Triggers>
                                            <!--Button Style on hover-->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{Binding BackgroundColor_Lighter2, Converter={StaticResource ColorConverterKey}}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <fa:IconImage Icon="WindowMinimize" 
                                              Style="{StaticResource controlButtonIcon}"
                                              Foreground="{Binding IconColor, Converter={StaticResource ColorConverterKey}}"/>
                            </Button>
                        </StackPanel>

                        <!-- Header Caption -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <!-- Caption -->
                            <StackPanel Grid.Column="0"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <fa:IconImage Icon="{Binding Icon}"
                                              Height="20"
                                              Width="20"
                                              Foreground="{Binding IconColor, Converter={StaticResource ColorConverterKey}}"
                                              Margin="35,0,10,0"/>

                                <TextBlock Text="{Binding Caption}"
                                           Foreground="{Binding TitleColor, Converter={StaticResource ColorConverterKey}}"
                                           FontSize="16"
                                           FontFamily="Montserrat"
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!--User options-->
                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        FlowDirection="RightToLeft"
                                        VerticalAlignment="Center"
                                        Margin="0,0,10,0">

                                <Button ToolTip="Settings"
                                        Tag="{StaticResource color3}"
                                        Command="{Binding ChangeChildViewCommand}"
                                        CommandParameter="2">
                                    <Button.Style>
                                        <Style BasedOn="{StaticResource iconButton}" TargetType='Button'>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="{Binding IconHoverColor, 
                                                                        Converter={StaticResource ColorConverterKey}}"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="False">
                                                    <Setter Property="Foreground" Value="{Binding IconColor, 
                                                                        Converter={StaticResource ColorConverterKey}}"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <fa:IconImage Icon="Gear" 
                                                  Style="{StaticResource iconButtonIcon}"/>
                                </Button>

                                <Button ToolTip="Export Party File"
                                        Tag="{StaticResource color4}"
                                        Command="{Binding ExportPartyCommand}">
                                    <Button.Style>
                                        <Style BasedOn="{StaticResource iconButton}" TargetType='Button'>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="{Binding IconHoverColor, 
                                                                        Converter={StaticResource ColorConverterKey}}"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="False">
                                                    <Setter Property="Foreground" Value="{Binding IconColor, 
                                                                        Converter={StaticResource ColorConverterKey}}"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <fa:IconImage Icon="FileExport" 
                                                  Style="{StaticResource iconButtonIcon}"/>
                                </Button>

                                <Button ToolTip="Import Party File"
                                        Tag="{StaticResource color5}"
                                        Command="{Binding ImportPartyCommand}">
                                    <Button.Style>
                                        <Style BasedOn="{StaticResource iconButton}" TargetType='Button'>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="{Binding IconHoverColor, 
                                                                        Converter={StaticResource ColorConverterKey}}"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="False">
                                                    <Setter Property="Foreground" Value="{Binding IconColor, 
                                                                        Converter={StaticResource ColorConverterKey}}"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <fa:IconImage Icon="FileImport" 
                                                  Style="{StaticResource iconButtonIcon}"/>
                                </Button>

                                <Button ToolTip="Save Party"
                                        Tag="{StaticResource color5}"
                                        Command="{Binding SaveCommand}">
                                    <Button.Style>
                                        <Style BasedOn="{StaticResource iconButton}" TargetType='Button'>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="{Binding IconHoverColor, 
                                                                        Converter={StaticResource ColorConverterKey}}"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="False">
                                                    <Setter Property="Foreground" Value="{Binding IconColor, 
                                                                        Converter={StaticResource ColorConverterKey}}"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <fa:IconImage Icon="Save" 
                                                  Style="{StaticResource iconButtonIcon}"/>
                                </Button>

                                <Button ToolTip="Edit Party"
                                        Tag="{StaticResource color5}">
                                    <Button.Style>
                                        <Style BasedOn="{StaticResource iconButton}" TargetType='Button'>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="{Binding IconHoverColor, 
                                                                        Converter={StaticResource ColorConverterKey}}"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="False">
                                                    <Setter Property="Foreground" Value="{Binding IconColor, 
                                                                        Converter={StaticResource ColorConverterKey}}"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <fa:IconImage Icon="Edit" 
                                                  Style="{StaticResource iconButtonIcon}"/>
                                </Button>

                                <Button ToolTip="Open Initiative Tracker"
                                        Tag="{Binding IconHoverColor, Converter={StaticResource ColorConverterKey}}"
                                        Command="{Binding ShowInitiativeTrackerCommand}">
                                    <Button.Style>
                                        <Style BasedOn="{StaticResource iconButton}" TargetType='Button'>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="{Binding IconHoverColor, 
                                                                        Converter={StaticResource ColorConverterKey}}"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="False">
                                                    <Setter Property="Foreground" Value="{Binding IconColor, 
                                                                        Converter={StaticResource ColorConverterKey}}"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <fa:IconImage Icon="ListOl" 
                                                  Style="{StaticResource iconButtonIcon}"
                                                  fa:Awesome.Flip="Horizontal"/>
                                </Button>

                                <Button ToolTip="Test Command"
                                        Style="{StaticResource iconButton}"
                                        Tag="{StaticResource color5}"
                                        Command="{Binding TestCommand}">
                                    <fa:IconImage Icon="Signature" 
                                                  Style="{StaticResource iconButtonIcon}"
                                                  fa:Awesome.Flip="Horizontal"/>
                                </Button>

                            </StackPanel>
                        </Grid>

                        <!-- Child View -->
                        <maControls:MetroAnimatedTabControl Name="ChildTabControl"
                                                            Grid.Row="2"
                                                            Margin="25"
                                                            Background="Transparent">
                            <maControls:MetroAnimatedTabControl.ItemContainerStyle>
                                <Style TargetType="TabItem">
                                    <Setter Property="Visibility"
                                            Value="Collapsed"/>
                                </Style>
                            </maControls:MetroAnimatedTabControl.ItemContainerStyle>

                           
                            <!--                         -->
                            <!-- Tab 0: Party Summary    -->
                            <!--                         -->
                            <maControls:MetroTabItem Name="PartySummaryTab" 
                                                     TabIndex="0"
                                                     IsSelected="{Binding DisplayPartySummaryTab, 
                                                                          Mode=TwoWay,
                                                                          UpdateSourceTrigger=PropertyChanged}">
                                <Border Background="{Binding BackgroundColor, Converter={StaticResource ColorConverterKey}}"
                                        CornerRadius="10" 
                                        Padding="10"
                                        Margin="10">
                                    <StackPanel>
                                        <ListView x:Name="lvPartySummaryData"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  ItemsSource="{Binding Characters}">
                                            <ListView.ItemContainerStyle>
                                                <Style TargetType="ListViewItem">
                                                    <Setter Property="Margin" Value="5"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="{x:Type ListViewItem}">
                                                                <ContentPresenter />
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter Property="Focusable" Value="False"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="Transparent" />
                                                            <Setter Property="BorderBrush" Value="Transparent" />
                                                            <Setter Property="BorderThickness" Value="0" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ListView.ItemContainerStyle>
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel x:Name="characterPanel"  Orientation="Horizontal">
                                                        <StackPanel.Style>
                                                            <Style TargetType="StackPanel">
                                                                <Setter Property="Background">
                                                                    <Setter.Value>
                                                                        <LinearGradientBrush StartPoint="0,0" 
                                                                 EndPoint="0.3,1">
                                                                            <GradientStop Color="{Binding Path=DataContext.UserSettings.DefaultCharacterColor1, Source={x:Reference Name=lvPartySummaryData}}" Offset="0"/>
                                                                            <GradientStop Color="{Binding Path=DataContext.UserSettings.DefaultCharacterColor2, Source={x:Reference Name=lvPartySummaryData}}" Offset="0.667"/>
                                                                            <GradientStop Color="#00FFFFFF" Offset="1"/>

                                                                        </LinearGradientBrush>
                                                                    </Setter.Value>
                                                                </Setter>
                                                                <Style.Triggers> <!--TODO: FIX THIS SHIT-->
                                                                    <DataTrigger Binding="{Binding Path=DataContext.UserSettings.UseCharacterUniqueColorsInSummaryView, Source={x:Reference Name=lvPartySummaryData}}" Value="True">
                                                                        <Setter Property="Background">
                                                                            <Setter.Value>
                                                                                <LinearGradientBrush StartPoint="0,0" 
                                                                 EndPoint="0.3,1">
                                                                                    <!--Use Character Specific Colors-->
                                                                                    <GradientStop Color="{Binding PrimaryCharacterColor}" Offset="0"/>
                                                                                    <GradientStop Color="{Binding SecondaryCharacterColor}" Offset="0.667"/>
                                                                                    <GradientStop Color="#00FFFFFF" Offset="1"/>
                                                                                </LinearGradientBrush>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </StackPanel.Style>
                                                        <!--StackPanel.Background>
                                                            <LinearGradientBrush StartPoint="0,0" 
                                                                                 EndPoint="0.3,1">
                                                                <GradientStop Color="{StaticResource winBorderColor2}" 
                                                                              Offset="0"/>
                                                                <GradientStop Color="{StaticResource winBorderColor3}" 
                                                                              Offset="0.667"/>
                                                                <GradientStop Color="#00FFFFFF" 
                                                                              Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </StackPanel.Background-->
                                                        <Border BorderBrush="Red" 
                                                                BorderThickness="2" 
                                                                VerticalAlignment="Center">
                                                            <Image Source="{Binding ImageUri, Converter={StaticResource ImageConverterKey}}" 
                                                                   Height="60" 
                                                                   Width="60" 
                                                                   VerticalAlignment="Center" 
                                                                   Stretch="Fill"/>
                                                        </Border>
                                                        <TextBlock Text="{Binding Name}" 
                                                                   VerticalAlignment="Center" 
                                                                   Margin="20,0,20,0"
                                                                   Width="150"
                                                                   Foreground="{Binding Path=DataContext.TextColor, 
                                                                        Converter={StaticResource ColorConverterKey}, 
                                                                        Source={x:Reference Name=PartySummaryTab}}"
                                                                   FontSize="20" 
                                                                   FontFamily="Monteserrat"/>
                                                        <StackPanel Orientation="Horizontal" 
                                                                    Width="70">
                                                            <TextBlock Text="{Binding ArmorClass}"
                                                                       Margin="10,0,0,0"
                                                                       Foreground="{Binding Path=DataContext.IconColor, 
                                                                        Converter={StaticResource ColorConverterKey}, 
                                                                        Source={x:Reference Name=PartySummaryTab}}"
                                                                       VerticalAlignment="Center" 
                                                                       HorizontalAlignment="Center"/>
                                                            <fa:IconImage Icon="Shield"
                                                                          Margin="5,0,0,0"
                                                                          Style="{StaticResource iconButtonIcon}"
                                                                          Foreground="{Binding Path=DataContext.IconColor, 
                                                                        Converter={StaticResource ColorConverterKey}, 
                                                                        Source={x:Reference Name=PartySummaryTab}}"
                                                                          Width="25" 
                                                                          Height="25"
                                                                          VerticalAlignment="Center"
                                                                          HorizontalAlignment="Center"/>
                                                        </StackPanel>
                                                        <Grid Width="420">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="*"/>
                                                                <RowDefinition Height="*"/>
                                                            </Grid.RowDefinitions>

                                                            <ProgressBar Height="34" 
                                                                             helpers:ProgressBarSmoother.SmoothValue="{Binding HealthRatio}">
                                                                <ProgressBar.Style>
                                                                    <Style TargetType="ProgressBar" BasedOn="{StaticResource healthbar}">
                                                                        <Setter Property="Template">
                                                                            <Setter.Value>
                                                                                <ControlTemplate TargetType="ProgressBar">
                                                                                    <Border BorderThickness="3" CornerRadius="10">
                                                                                        <Border.BorderBrush>
                                                                                            <LinearGradientBrush StartPoint="0,0" 
                                                 EndPoint="1,1">
                                                                                                <GradientStop Color="{Binding Path=DataContext.BorderColor_Darker, 
                                                                        Source={x:Reference Name=PartySummaryTab}}" 
                                              Offset="0"/>
                                                                                                <GradientStop Color="{Binding Path=DataContext.BorderColor, 
                                                                        Source={x:Reference Name=PartySummaryTab}}" 
                                              Offset="0.5"/>
                                                                                                <GradientStop Color="{Binding Path=DataContext.BorderColor_Lighter, 
                                                                        Source={x:Reference Name=PartySummaryTab}}" 
                                              Offset="1"/>
                                                                                            </LinearGradientBrush>
                                                                                        </Border.BorderBrush>
                                                                                        <Border.Background>
                                                                                            <LinearGradientBrush StartPoint="0,0"
                                                 EndPoint="1,1" />
