                                                         BorderThickness="0,0,0,2"
                                                         Height="28"
                                                         VerticalContentAlignment="Center"
                                                         Margin="0,0,10,0"/>
                                            </Grid>

                                            <!-- Col2 Content of Create Character -->
                                            <Grid Grid.Column="1" HorizontalAlignment="Left"
                                                  MinWidth="210" 
                                                  Margin="30,10,0,0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*" MaxHeight="40"/>
                                                    <RowDefinition Height="*" MaxHeight="40"/>
                                                    <RowDefinition Height="*" MaxHeight="40"/>
                                                    <RowDefinition Height="*" MaxHeight="40"/>
                                                    <RowDefinition Height="*" MaxHeight="40"/>
                                                    <RowDefinition Height="*" MaxHeight="40"/>
                                                    <RowDefinition Height="*" MaxHeight="40"/>
                                                    <RowDefinition Height="*" MaxHeight="40"/>
                                                    <RowDefinition Height="*" MaxHeight="40"/>
                                                    <RowDefinition Height="*" MaxHeight="40"/>
                                                </Grid.RowDefinitions>

                                                <!--Character Image img-->
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Character Image"
                                                           Foreground="{Binding TextColor, Converter={StaticResource ColorConverterKey}}"
                                                           FontSize="12"
                                                           FontWeight="Medium"
                                                           FontFamily="Montserrat"                             
                                                           Margin="0,20,0,0"/>
                                                    <Button Command="{Binding BrowseTargetCharacterImageCommand}"
                                                            Tag="{StaticResource color3}"
                                    ToolTip="Search for Image"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Bottom">
                                                        <Button.Style>
                                                            <Style BasedOn="{StaticResource iconButton}" TargetType='Button'>
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Foreground" Value="{Binding IconHoverColor, 
                                                                        Converter={StaticResource ColorConverterKey}}"/>
                                                                    </Trigger>
                                                                    <Trigger Property="IsMouseOver" Value="False">
                                                                        <Setter Property="Foreground" Value="{Binding IconColor, 
                                                                        Converter={StaticResource ColorConverterKey}}"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                        <fa:IconImage Icon="FolderOpen" 
                                              Style="{StaticResource iconButtonIcon}"
                                              Width="20" Height="20"/>
                                                    </Button>
                                                </StackPanel>
                                                <!-- Row 1 -->
                                                <TextBox x:Name="txtboxEditBackgroundImg"
                                                         Text="{Binding SelectedCharacter.ImagePath}"
                                                         Grid.Row="1"
                                                         FontSize="13"
                                                         FontWeight="Medium"
                                                         FontFamily="Montserrat"                            
                                                         Foreground="{Binding TextColor, Converter={StaticResource ColorConverterKey}}"
                                                         Background="Transparent"
                                                         CaretBrush="LightGray"
                                                         BorderBrush="{Binding TextColor, Converter={StaticResource ColorConverterKey}}"
                                                         BorderThickness="0,0,0,2"
                                                         Height="28"
                                                         VerticalContentAlignment="Center"
                                                         Margin="0,5,10,0"
                                                         Padding="5,0,0,0"/>

                                                <!--Color 1-->
                                                <TextBlock Text="Color 1"
                                                           Grid.Row="2"
                                                           Foreground="{Binding TextColor, Converter={StaticResource ColorConverterKey}}"
                                                           FontSize="12"
                                                           FontWeight="Medium"
                                                           FontFamily="Montserrat"                             
                                                           Margin="0,20,0,0"/>
                                                <!-- Row 3 -->
                                                <TextBox x:Name="txtboxEditColor1"
                                                         Text="{Binding SelectedCharacter.PrimaryCharacterColor}"
                                                         Grid.Row="3"
                                                         FontSize="13"
                                                         FontWeight="Medium"
                                                         FontFamily="Montserrat"                            
                                                         Foreground="{Binding TextColor, Converter={StaticResource ColorConverterKey}}"
                                                         Background="Transparent"
                                                         CaretBrush="LightGray"
                                                         BorderBrush="{Binding TextColor, Converter={StaticResource ColorConverterKey}}"
                                                         BorderThickness="0,0,0,2"
                                                         Height="28"
                                                         VerticalContentAlignment="Center"
                                                         Margin="0,5,10,0"
                                                         Padding="5,0,0,0"/>

                                                <!--Color 2-->
                                                <TextBlock Text="Color 2"
                                                           Grid.Row="4"
                                                           Foreground="{Binding TextColor, Converter={StaticResource ColorConverterKey}}"
                                                           FontSize="12"
                                                           FontWeight="Medium"
                                                           FontFamily="Montserrat"                             
                                                           Margin="0,20,0,0"/>
                                                <!-- Row 3 -->
                                                <TextBox x:Name="txtboxEditColor2"
                                                         Text="{Binding SelectedCharacter.SecondaryCharacterColor}"
                                                         Grid.Row="5"
                                                         FontSize="13"
                                                         FontWeight="Medium"
                                                         FontFamily="Montserrat"                            
                                                         Foreground="{Binding TextColor, Converter={StaticResource ColorConverterKey}}"
                                                         Background="Transparent"
                                                         CaretBrush="LightGray"
                                                         BorderBrush="{Binding TextColor, Converter={StaticResource ColorConverterKey}}"
                                                         BorderThickness="0,0,0,2"
                                                         Height="28"
                                                         VerticalContentAlignment="Center"
                                                         Margin="0,5,10,0"
                                                         Padding="5,0,0,0"/>

                                                <!--Color 2-->
                                                <TextBlock Text="Color 3"
                                                           Grid.Row="6"
                                                           Foreground="{Binding TextColor, Converter={StaticResource ColorConverterKey}}"
                                                           FontSize="12"
                                                           FontWeight="Medium"
                                                           FontFamily="Montserrat"                             
                                                           Margin="0,20,0,0"/>
                                                <!-- Row 3 -->
                                                <TextBox x:Name="txtboxEditColor3"
                                                         Text="{Binding SelectedCharacter.TertiaryCharacterColor}"
                                                         Grid.Row="7"
                                                         FontSize="13"
                                                         FontWeight="Medium"
                                                         FontFamily="Montserrat"                            
                                                         Foreground="{Binding TextColor, Converter={StaticResource ColorConverterKey}}"
                                                         Background="Transparent"
                                                         CaretBrush="LightGray"
                                                         BorderBrush="{Binding TextColor, Converter={StaticResource ColorConverterKey}}"
                                                         BorderThickness="0,0,0,2"
                                                         Height="28"
                                                         VerticalContentAlignment="Center"
                                                         Margin="0,5,10,0"
                                                         Padding="5,0,0,0"/>

                                                <StackPanel Orientation="Horizontal"
                                                            Grid.Row="8">
                                                    <Button Command="{Binding OpenCanvasCommand}"
                                                    Tag="{StaticResource color5}"
                                                    ToolTip="Open Color Canvas">
                                                        <Button.Style>
                                                            <Style BasedOn="{StaticResource iconButton}" TargetType='Button'>
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Foreground" Value="{Binding IconHoverColor, 
                                                                        Converter={StaticResource ColorConverterKey}}"/>
                                                                    </Trigger>
                                                                    <Trigger Property="IsMouseOver" Value="False">
                                                                        <Setter Property="Foreground" Value="{Binding IconColor, 
                                                                        Converter={StaticResource ColorConverterKey}}"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                        <fa:IconImage Icon="Palette" 
                                                                      Style="{StaticResource iconButtonIcon}"/>
                                                    </Button>
                                                    <TextBlock Text="Color Hexcode Selector"
                                                           Foreground="{Binding TextColor, Converter={StaticResource ColorConverterKey}}"
                                                               VerticalAlignment="Center"
                                                           FontSize="12"
                                                           FontWeight="Medium"
                                                           FontFamily="Montserrat"                             
                                                           Margin="10,0,0,0"/>
                                                </StackPanel>


                                            </Grid>

                                            <!-- Col3 Content of Create Character -->
                                            <Grid Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Top"
                                                  MinWidth="300"
                                                  Margin="30,10,0,0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <!--Bonuses-->
                                                <StackPanel Orientation="Vertical" Margin="5" >

                                                    <StackPanel Orientation="Horizontal">
                                                        <Button
                                                Command="{Binding ShowAddAbilityBonusWindowCommand}"
                                                Content="Add Bonus" 
                                                            Margin="5"
                                                FontSize="12"
                                                FontFamily="Montserrat"
                                                Cursor="Hand"
                                                BorderThickness="0"
                                                Foreground="{Binding TextColor, Converter={StaticResource ColorConverterKey}}"
                                                VerticalAlignment="Top">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Background" Value="{Binding ButtonColor, 
                                                                        Converter={StaticResource ColorConverterKey}}"/>
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border Height="30"
                                                                        CornerRadius="15"
                                                                        Background="{TemplateBinding Background}">
                                                                                    <ContentPresenter VerticalAlignment="Center"
                                                                                      HorizontalAlignment="Center"
                                                                                                      Margin="10,0,10,0"/>
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="{Binding ButtonHoverColor, 
                                                                        Converter={StaticResource ColorConverterKey}}"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>

                                                        <Button
                                                Command="{Binding RemoveAbilityBonusCommand}"
                                                        CommandParameter="{Binding ElementName=lvAbilityBonuses, Path=SelectedItem}"
                                                Content="Remove Bonus"  
                                                            Margin="5"
                                                FontSize="12"
                                                FontFamily="Montserrat"
                                                Cursor="Hand"
                                                BorderThickness="0"
                                                Foreground="{Binding TextColor, Converter={StaticResource ColorConverterKey}}"
                                                VerticalAlignment="Top">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Background" Value="{Binding ButtonColor, 
                                                                        Converter={StaticResource ColorConverterKey}}"/>
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border Height="30"
                                                                        CornerRadius="15"
                                                                        Background="{TemplateBinding Background}">
                                                                                    <ContentPresenter VerticalAlignment="Center"
                                                                                      HorizontalAlignment="Center"
                                                                                                      Margin="10,0,10,0"/>
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="{Binding ButtonHoverColor, 
                                                                        Converter={StaticResource ColorConverterKey}}"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                    </StackPanel>

                                                    <ListView Name="lvEditAbilityBonuses" ItemsSource="{Binding TargetCharacterBonuses}"
                                                              Background="Transparent" BorderThickness="0" BorderBrush="Transparent"
                                                              Foreground="{Binding TextColor, Converter={StaticResource ColorConverterKey}}"
                                                              ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                                                              Width="400"
                                                              Margin="0,0,0,10">
                                                        <ListView.ItemContainerStyle>
                                                            <Style TargetType="ListViewItem">
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsSelected" Value="True">
                                                                        <Setter Property="Foreground" Value="Red" />
                                                                        <Setter Property="Background" Value="Transparent"/>
                                                                    </Trigger>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Foreground" Value="Yellow" />
                                                                        <Setter Property="Background" Value="Transparent"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </ListView.ItemContainerStyle>
                                                        <ListView.View>

                                                            <GridView AllowsColumnReorder="false">
                                                                <GridView.ColumnHeaderContainerStyle>
                                                                    <Style TargetType="{x:Type GridViewColumnHeader}">
                                                                        <Setter Property="IsEnabled" Value="False"/>
                                                                        <Style.Triggers>
                                                                            <Trigger Property="IsEnabled" Value="False">
                                                                                <Setter Property="TextElement.Foreground" Value="Black"/>
                                                                            </Trigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </GridView.ColumnHeaderContainerStyle>

                                                                <GridViewColumn DisplayMemberBinding="{Binding Path=AbilityName}" Header="Name" 
                                                                                HeaderContainerStyle="{StaticResource myHeaderStyle}"
                                                                                HeaderTemplate="{StaticResource myHeaderTemplate}" 
                                                                                Width="200"/>
                                                                <GridViewColumn DisplayMemberBinding="{Binding Path=TargetAbilityBonusDescription}" Header="Aptitude" 
                                                                                HeaderContainerStyle="{StaticResource myHeaderStyle}"
                                                                                HeaderTemplate="{StaticResource myHeaderTemplate}"
                                                                                Width="100"/>
                                                                <GridViewColumn DisplayMemberBinding="{Binding Path=AbilityAdditionalBonus}" Header="Additional Bonus" 
                                                                                HeaderContainerStyle="{StaticResource myHeaderStyle}"
                                                                                HeaderTemplate="{StaticResource myHeaderTemplate}"
                                                                                Width="100"/>
                                                            </GridView>

                                                        </ListView.View>
                                                    </ListView>

                                                </StackPanel>

                                                <!--Trackers-->
                                                <StackPanel Orientation="Vertical" Margin="5" Grid.Row="1">

                                                    <StackPanel Orientation="Horizontal">
                                                        <Button
                                                Command="{Binding ShowAddTargetTrackerWindowCommand}"
                                                Content="Add Tracker" 
                                                            Margin="5"
                                                FontSize="12"
                                                FontFamily="Montserrat"
                                                Cursor="Hand"
                                                BorderThickness="0"
                                                Foreground="{Binding TextColor, Converter={StaticResource ColorConverterKey}}"
                                                VerticalAlignment="Top">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Background" Value="{Binding ButtonColor, 
                                                                        Converter={StaticResource ColorConverterKey}}"/>
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border Height="30"
                                                                        CornerRadius="15"
                                                                        Background="{TemplateBinding Background}">
                                                                                    <ContentPresenter VerticalAlignment="Center"
                                                                                      HorizontalAlignment="Center"
                                                                                                      Margin="10,0,10,0"/>
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="{Binding ButtonHoverColor, 
                                                                        Converter={StaticResource ColorConverterKey}}"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>

                                                        <Button
                                                Command="{Binding RemoveTargetTrackerWindowCommand}"
                                                        CommandParameter="{Binding ElementName=lvNewTrackers, Path=SelectedItem}"
                                                Content="Remove Tracker"  
                                                            Margin="5"
                                                FontSize="12"
                                                FontFamily="Montserrat"
                                                Cursor="Hand"
                                                BorderThickness="0"
                                                Foreground="{Binding TextColor, Converter={StaticResource ColorConverterKey}}"
                                                VerticalAlignment="Top">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Background" Value="{Binding ButtonColor, 
                                                                        Converter={StaticResource ColorConverterKey}}"/>
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border Height="30"
                                                                        CornerRadius="15"
                                                                        Background="{TemplateBinding Background}">
                                                                                    <ContentPresenter VerticalAlignment="Center"
                                                                                      HorizontalAlignment="Center"
                                                                                                      Margin="10,0,10,0"/>
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="{Binding ButtonHoverColor, 
                                                                        Converter={StaticResource ColorConverterKey}}"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                    </StackPanel>



                                                    <ListView Name="lvEditNewTracker" ItemsSource="{Binding SelectedCharacter.CharacterTrackersList}"
                                                              Background="Transparent" BorderThickness="0" BorderBrush="Transparent"
                                                              Foreground="{Binding TextColor, 
                                                                        Converter={StaticResource ColorConverterKey}}"
                                                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                              Width="400">
                                                        <ListView.ItemContainerStyle>
                                                            <Style TargetType="ListViewItem">
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsSelected" Value="True">
                                                                        <Setter Property="Foreground" Value="Red" />
                                                                        <Setter Property="Background" Value="Transparent"/>
                                                                    </Trigger>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Foreground" Value="Yellow" />
                                                                        <Setter Property="Background" Value="Transparent"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </ListView.ItemContainerStyle>
                                                        <ListView.View>

                                                            <GridView AllowsColumnReorder="False">
                                                                <GridViewColumn DisplayMemberBinding="{Binding Path=TrackerName}" 
                                                                                Header="TrackerName"
                                                                                HeaderContainerStyle="{StaticResource myHeaderStyle}"
                                                                                
                                                                                Width="200"/>
                                                                <!--Width="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListView}, Converter={StaticResource ListViewVariableWidthConverterKey}}"-->

                                                                <GridViewColumn DisplayMemberBinding="{Binding Path=TrackerAvailableUses}" 
                                                                                Header="Current #"
                                                                                HeaderContainerStyle="{StaticResource myHeaderStyle}"
                                                                                Width="100"/>

                                                                <GridViewColumn DisplayMemberBinding="{Binding Path=TrackerMaxUses}" 
                                                                                Header="Max #" 
                                                                                HeaderContainerStyle="{StaticResource myHeaderStyle}"
                                                                                Width="100"/>

                                                            </GridView>

                                                        </ListView.View>
                                                    </ListView>

                                                </StackPanel>

                                            </Grid>

                                        </Grid>
                                    </Border>
                                </Grid>
                            </maControls:MetroTabItem>


                        </maControls:MetroAnimatedTabControl>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Border>
</maControls:MetroWindow>
