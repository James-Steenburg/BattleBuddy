<Window
    x:Class="BattleBuddy.TestViews.TestGradient"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BattleBuddy.TestViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TestGradient"
    Width="800"
    Height="1050"
    mc:Ignorable="d">
    <Grid>
        <Border BorderThickness="1" CornerRadius="10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0.2,0" EndPoint="0.2,1">
                    <GradientStop Offset="0" Color="#FF051026" />
                    <GradientStop Offset="0.5" Color="#FF1B3359" />
                    <GradientStop Offset="1" Color="#FF463E65" />
                </LinearGradientBrush>
            </Border.Background>
            <TextBlock
                Margin="10,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                FontFamily="Monteserrat"
                FontSize="70"
                FontWeight="Medium"
                Foreground="#FFF5D6DB"
                Text="Vibe Check"
                Visibility="Hidden" />
        </Border>
    </Grid>
</Window>
